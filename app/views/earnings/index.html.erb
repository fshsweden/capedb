<h1>Listing earnings</h1>

<table>
  <thead>
    <tr>
      <th>Belongs to</th>
      <th>Date of entry</th>
      <th>Year</th>
      <th>Profit</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @earnings.each do |earning| %>
      <tr>
        <td><%= earning.belongs_to %></td>
        <td><%= earning.date_of_entry %></td>
        <td><%= earning.year %></td>
        <td><%= earning.profit %></td>
        <td><%= link_to 'Show', earning %></td>
        <td><%= link_to 'Edit', edit_earning_path(earning) %></td>
        <td><%= link_to 'Destroy', earning, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

