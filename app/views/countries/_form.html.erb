<%= form_for @country, :html => {:class => 'form-horizontal'} do |f| %>

    <div class="form-group">
      <label for="inputName" class="control-label col-xs-2">Name</label>

      <div class="col-xs-10">
        <%= f.text_field :name, :class => "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <label for="inputCode" class="control-label col-xs-2">Code</label>

      <div class="col-xs-10">
        <%= f.text_field :code, :class => "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-xs-offset-2 col-xs-10">
        <div class="checkbox">
          <label>
            <input type="checkbox">Remember me
          </label>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="col-xs-offset-2 col-xs-10">
        <%= f.submit "Save", {:class => "btn btn-primary"} %>
      </div>
    </div>

<% end %>

<%= link_to "Edit inflation records for " + @country.name, country_inflations_path(@country) %>

